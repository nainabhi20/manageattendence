<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_fragment_constract_layout_background">

        <EditText
            android:id="@+id/email_sign_up"
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:background="@drawable/background_fro_edit_text"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="10sp"
            android:textColor="#F6EFEF"
            android:textColorHint="#FDFAFA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.375" />

        <EditText
            android:id="@+id/password_sign_up"
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:background="@drawable/background_fro_edit_text"
            android:ems="10"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:paddingLeft="10sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FAF6F6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/email_sign_up"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email_sign_up"
            app:layout_constraintTop_toBottomOf="@+id/email_sign_up"
            app:layout_constraintVertical_bias="0.052" />

        <EditText
            android:id="@+id/name_sign_up"
            android:layout_width="222dp"
            android:layout_height="41dp"
            android:background="@drawable/background_fro_edit_text"
            android:ems="10"
            android:hint="Enter your Name"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:textColor="#F3EEEE"
            android:textColorHint="#FDF9F9"
            app:layout_constraintBottom_toTopOf="@+id/email_sign_up"
            app:layout_constraintEnd_toEndOf="@+id/email_sign_up"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email_sign_up"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.904" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="239dp"
            android:layout_height="76dp"
            android:text="Create a new account"
            android:textColor="#FDF8F8"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/name_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.168" />

        <Button
            android:id="@+id/sign_up_sign_up"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:background="@drawable/button_back"
            android:text="Sign up"
            android:textColor="#FAF6F6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password_sign_up"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="@+id/password_sign_up"
            app:layout_constraintTop_toBottomOf="@+id/password_sign_up"
            app:layout_constraintVertical_bias="0.109" />

        <TextView
            android:id="@+id/already_have_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account"
            android:textColor="#FDF9F9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_sign_up"
            app:layout_constraintVertical_bias="0.153" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>